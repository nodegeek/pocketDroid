<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.app.MainActivity"
    android:longClickable="false"
    android:focusable="false"
    android:background="#d6dcde">


    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/my_test_img"
        android:maxHeight="200dp"
        android:minHeight="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mangalore: RTI a priceless asset, weapon to know truth - former secretary to govt"
        android:id="@+id/main_title"
        android:textIsSelectable="false"
        android:layout_below="@+id/thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:paddingStart="5dp"
        android:typeface="serif"
        android:textSize="16dp"
        android:textColor="#171b0d"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/childView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/main_title"
        android:background="#ffffff">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:src="@drawable/daiji_logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Daijiworld.com"
            android:id="@+id/newSourceTV"
            android:layout_toRightOf="@+id/logo"
            android:paddingTop="3dp"
            android:paddingLeft="5dp"
            android:textColor="#82a2c1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="18 hours ago"
            android:id="@+id/time"
            android:layout_below="@+id/newSourceTV"
            android:layout_toRightOf="@+id/logo"
            android:paddingTop="1dp"
            android:textColor="#82a2c1"
            android:paddingLeft="5dp"
            />

    </RelativeLayout>


</RelativeLayout>
